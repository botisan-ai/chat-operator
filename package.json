    "turbo": "^1.1.2",
    "prettier": "^2.5.1"
  },
  "volta": {
    "node": "16.13.1",
    "yarn": "1.22.17"
  },
  "lint-staged": {
    "./src/**/*{.ts,.tsx}": [
